<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/matching_back"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="170.00dp"
                    android:layout_height="170.00dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edge1"
                    android:src="@drawable/loading"
                    android:onClick="mOnClickStudent"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="-40dp"
                    android:textScaleX="0.9"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="멘토-멘티"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gbold"
                    android:textSize="30dp"
                    />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_icon2"
                    android:layout_width="170.00dp"
                    android:layout_height="170.00dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edge1"
                    android:src="@drawable/mortarboard"
                    android:onClick="mOnClickGraduate"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="-40dp"
                    android:text="졸업생"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textScaleX="0.9"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gbold"
                    android:textSize="30dp"

                    />
        </LinearLayout>


</LinearLayout>