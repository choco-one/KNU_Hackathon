<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff7e9"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingTop="130dp"
            android:layout_weight="1"
            >

            <EditText
                android:id="@+id/signup_name"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/edge1"
                android:gravity="left|center"
                android:hint="이 름"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textColorHint="#888888"
                android:textSize="14dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/signup_id"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edge1"
                    android:gravity="left|center"
                    android:hint="example@knu.ac.kr"
                    android:textColorHint="#888888"
                    android:paddingLeft="20dp"
                    android:textSize="14dp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="40dp"/>
                <Button
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/edge3"
                    android:text="인증"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"/>


            </LinearLayout>


            <EditText
                android:id="@+id/et_password"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/edge1"
                android:gravity="left|center"
                android:hint="비밀번호"
                android:textColorHint="#888888"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/signup_phone"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:background="@drawable/edge1"
                android:gravity="left|center"
                android:hint="전화번호"
                android:inputType="phone"
                android:textColorHint="#888888"
                android:paddingLeft="20dp"
                android:textSize="14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="전공"
                    android:textStyle="bold"
                    android:textColor="#DC8181"
                    android:textSize="16dp" />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/computer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@drawable/custom_radio_button"
                        android:text="  심컴"
                        android:layout_marginRight="50dp"
                        android:textColor="#3D3838" />

                    <RadioButton
                        android:id="@+id/globalSW"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/custom_radio_button"
                        android:textColor="#3D3838"
                        android:text="  글솝" />
                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="성별"
                    android:textSize="16dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#DC8181"
                    />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/custom_radio_button"
                        android:layout_marginRight="50dp"
                        android:textColor="#3D3838"
                        android:text="  남자" />

                    <RadioButton
                        android:id="@+id/woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:button="@drawable/custom_radio_button"
                        android:textColor="#3D3838"
                        android:text="  여자" />
                </RadioGroup>


            </LinearLayout>




            <Button
                android:id="@+id/btn_signin"
                app:backgroundTint="@null"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/edge3"
                android:text="회 원 가 입"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="bottom"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/login_bottom"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>