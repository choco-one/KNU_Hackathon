<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff7e9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            ></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/layout_corner"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내정보"
                    android:textScaleX="0.9"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gbold"
                    android:textSize="30dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:text="이름"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="18dp" />
                            <TextView
                                android:id="@+id/user_name"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:text="이메일"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="18dp" />
                            <TextView
                                android:id="@+id/user_email"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:text="성별"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="18dp" />
                            <TextView
                                android:id="@+id/user_gender"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:text="학번"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/user_stdnum"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:textSize="15dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="전공"
                                android:textColor="@color/black"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <RadioGroup
                                android:id="@+id/major"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:orientation="horizontal">
                                <RadioButton
                                    android:id="@+id/computer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:button="@drawable/custom_radio_button"
                                    android:text="심컴"
                                    android:paddingLeft="5dp"
                                    android:layout_marginRight="50dp"
                                    android:textColor="#3D3838" />

                                <RadioButton
                                    android:id="@+id/globalSW"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:button="@drawable/custom_radio_button"
                                    android:textColor="#3D3838"
                                    android:paddingLeft="5dp"
                                    android:text="글솦" />
                            </RadioGroup>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:text="학적"
                                android:gravity="center_vertical"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="18dp" />
                            <RadioGroup
                                android:id="@+id/type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/postman"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:button="@drawable/custom_radio_button"
                                    android:layout_marginRight="10dp"
                                    android:textColor="#3D3838"
                                    android:paddingLeft="5dp"
                                    android:text="신입생" />

                                <RadioButton
                                    android:id="@+id/student"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:button="@drawable/custom_radio_button"
                                    android:layout_marginRight="10dp"
                                    android:textColor="#3D3838"
                                    android:paddingLeft="5dp"
                                    android:text="재학생" />

                                <RadioButton
                                    android:id="@+id/graduate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:button="@drawable/custom_radio_button"
                                    android:paddingLeft="5dp"
                                    android:text="졸업생"
                                    android:textColor="#3D3838" />
                            </RadioGroup>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="전화번호"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="18dp" />
                            <EditText
                                android:id="@+id/user_phone"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:textColorHint="#888888"
                                android:textColor="@color/black"
                                android:textSize="15dp" />
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:text="희망진로"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="18dp" />

                            <EditText
                                android:id="@+id/user_career"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:hint="입력하세요"
                                android:textColor="@color/black"
                                android:textColorHint="#888888"
                                android:textSize="15dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:text="관심사"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="18dp" />
                            <EditText
                                android:id="@+id/user_interest"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:hint="입력하세요"
                                android:textColor="@color/black"
                                android:textColorHint="#888888"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:id="@+id/editOK_btn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edge3"
                android:text="완료"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            ></LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>