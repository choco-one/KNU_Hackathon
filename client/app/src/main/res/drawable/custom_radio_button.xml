<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- UNSELECTED -->
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
                    <stroke android:color="@color/unSelectColor" android:width="1dp" />
                    <corners android:radius="15dp" />
                    <solid android:color="@color/white" />
                </shape>
            </item>
            <item android:drawable="@drawable/nonselect_background"
                android:top="5dp" android:right="5dp" android:bottom="5dp" android:left="5dp" />
        </layer-list>
    </item>
    <!-- SELECTED -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:color="@color/selectColor" android:width="1dp" />
                    <corners android:radius="15dp" />
                    <solid android:color="#ffffff" />
                </shape>
            </item>

            <item android:drawable="@drawable/select_background"
                android:top="5dp" android:right="5dp" android:bottom="5dp" android:left="5dp" />
        </layer-list>
    </item>
</selector>